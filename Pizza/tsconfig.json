{
	"compilerOptions": {
		"target": "esnext",
		"watch": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./build",
		"moduleResolution": "node",
		"module": "commonjs",
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		],
		"baseUrl": ".",
		"paths": {
			"@models/*" : ["./src/Models/*"],
			"@routes/*" : ["./src/Routes/*"],
			"@utils/*" : ["./src/Utils/*"],
			"@test/*" : ["./src/Test/*"],
			"@src/*" : ["./src/*"]
		},
		"resolveJsonModule": true	
	},
    "include": ["./src"],
}
